# Database Configuration
DATABASE_URL=postgresql://ai_linear:ai_linear_password@postgres:5432/ai_linear_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# ============================================
# GitHub App Configuration (for Claude AI Reviews)
# ============================================
# Create GitHub App at: https://github.com/settings/apps
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=./github-app-private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret_change_this

# GitHub OAuth Configuration (for user authentication)
# Register OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# ============================================
# Claude AI Configuration
# ============================================
# Get API key at: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================
# GitLab OAuth Configuration (Optional)
# ============================================
# Register your OAuth App at: https://gitlab.com/-/profile/applications
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret

# Server Configuration
PORT=8000
NODE_ENV=production

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3134
PUBLIC_URL=https://your-lineary-domain.com

# Security
JWT_SECRET=change-this-to-random-string
SESSION_SECRET=change-this-to-another-random-string

# ============================================
# AI Learning Configuration
# ============================================
AI_LEARNING_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7
AI_MIN_DATA_POINTS=5

# ============================================
# Feature Flags
# ============================================
FEATURE_GITHUB_APP=true
FEATURE_AI_REVIEWS=true
FEATURE_AI_LEARNING=true
FEATURE_ANALYTICS=true

# ============================================
# MCP Server Configuration (for Claude Desktop)
# ============================================
LINEARY_API_URL=https://your-lineary-domain.com/api
LINEARY_API_KEY=optional_api_key_if_using_auth

# Webhook URLs (automatically configured)
# GitHub App: https://your-domain.com/api/github/webhook
# GitLab: https://your-domain.com/api/webhooks/gitlab/[PROJECT_ID]