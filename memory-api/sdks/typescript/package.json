{
  "name": "@betty/memory-sdk",
  "version": "2.0.0",
  "description": "Official TypeScript SDK for BETTY Memory System v2.0",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "docs": "typedoc src/index.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "betty",
    "memory",
    "knowledge-management",
    "search",
    "semantic-search",
    "ai",
    "typescript",
    "sdk",
    "api-client"
  ],
  "author": "BETTY Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/betty-typescript-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/betty-typescript-sdk/issues"
  },
  "homepage": "https://github.com/your-org/betty-typescript-sdk#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "eventemitter3": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0",
    "typedoc": "^0.25.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./websocket": {
      "import": "./dist/websocket/index.esm.js",
      "require": "./dist/websocket/index.js",
      "types": "./dist/websocket/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}